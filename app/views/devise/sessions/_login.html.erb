
<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="login-form">
    <div class="email">
      <%= f.text_field :email, id:"email" %>
      <div class="remember-box">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "remember-label" %>
      </div>
    </div>
    <div class="password">
      <%= f.password_field :password, id: "password" %>
      <%= link_to "#lostModal", data: { toggle: "modal" } do%>
          <div class="forgot-link">Mot de passe oubliÃ©?</div>
      <% end %>
    </div>
    <div class="validate-zone">
    <%= f.submit 'Connecter', class: "form-action" %>
    </div>
  </div>
<% end %>


