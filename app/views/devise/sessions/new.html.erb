<div class="sign-container" id="new-user-session">
  <div class="row">
    <div class="sign-form col-xs-12 col-md-4 col-md-offset-4">
        <h2>Me connecter</h2>
        <%= link_to new_user_registration_path do %>
          <div class="sign-link">Je n'ai pas encore de compte</div>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, html: {id: :registrate }, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, required: true, label: 'Mot de passe' %>
            <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= link_to "#lostModal", data: { toggle: "modal" } do%>
              <div class="forgot-link">Mot de passe oublié ?</div>
          <% end %>
          <div class="form-actions">
            <%= f.button :submit, "Connexion", class: "btn-orange" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<div class="forgot-modal">
  <!-- Modal -->
    <div class="modal fade" id="lostModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Mot de passe oublié ?</h4>

          </div>
          <div class="modal-body">
            <p id="forgot-p">Saisissez <b>l'adresse email</b> que vous nous avez indiquée lors de votre inscription.
            <br>Nous allons vous envoyer un lien pour choisir un nouveau mot de passe.</p>
            <div class="pick-modal">
              <%= render "devise/passwords/reset-password"%>
            </div>
          </div>
        </div>

      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>

<%= render 'shared/footer' %>
