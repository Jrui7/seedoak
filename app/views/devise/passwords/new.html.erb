
<div class="container-home">

  <header class="header-home">
    <div class="logo-and-log">
      <div class="logo-box">
        <div id="logo-home">Seedlap</div>
        <span class="glyphicon glyphicon-leaf", id="logo-home"></span>
      </div>
      <div class="connect-button">
        <div class="btn">
          CONNEXION
        </div>
      </div>
      <div class="log-in-home hidden">
        <%= render "devise/sessions/login" %>
      </div>
    </div>
  </header>



    <div class="recover-form">

      <h2>Mot de passe oubli√©?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer instructions", class: "btn btn-danger" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

</div>

