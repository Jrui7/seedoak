<div class="sign-container" id="new-user-session">
  <div class="row">
    <div class="sign-form col-xs-12 col-md-4 col-md-offset-4">
      <h2>Changer votre mot de passe</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-inputs">
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("Minimum #{@minimum_password_length} carractÃ¨res" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirmez votre nouveau mot de passe", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Changer mon mot de passe" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
