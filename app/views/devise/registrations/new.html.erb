<div class="sign-container" id="new-user-session">
  <div class="row">
    <div class="sign-form col-xs-12 col-md-4 col-md-offset-4">
        <h2>Première visite?</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-inputs">
          <%= f.input :date_of_birth, required: true, label:"Date de naissance", as: :date, start_year: Date.today.year - 18,
                                        end_year: Date.today.year - 90,
                                        placeholder: { year: 'Année', month: 'mois', day: 'jour' },
                                        order: [:day, :month, :year]  %>

            <%= f.input :pseudo, required: true, autofocus: true %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "C'est parti !" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
