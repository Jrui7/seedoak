<!-- Modal -->
  <div class="modal fade" id="myPick-<%= pick.id%>" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <%= simple_form_for [seed, pick], url: pick_path(pick), remote: true do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= pick.seed.title.capitalize %> </h4>
        </div>
        <div class="modal-body">
          <h3 class="edit-pick-title">Modifier votre pick </h3>
          <div class="inputs-and-recap">
            <div class="pick-inputs">
              <div class="price">
                <label for="price">Votre prix</label>
                <%= f.input_field :price, as: :integer, class: 'input-sm form-control edit-pick', id: "#{pick.id}", placeholder: 'Exemple: 150'%>
                <span class="unit">€</span>
              </div>
              <% unless seed.size_guide.blank? %>
                <label for="size" id="size-label">Taille</label>
                <%= f.input_field :size, class: 'input-sm form-control pick', id: 'size-pick', placeholder: "Référez-vous au guide des tailles"%>
              <% end %>
            </div>
            <div class="recap-animation">
              <p>Récap:</p>
              <div class="end-block">
                <div class="how-much">
                  <div>Mon pick:</div>
                  <div class="cout">
                    <div class="counter" id="counter-<%= pick.id %>"><%= pick.price.round(2) %></div>
                    <p>€</p>
                  </div>
                </div>
                <div class="how-much">
                  <div>Livraison:</div>
                  <div class="cout">
                    <div id="cost-input-<%= pick.id %>"><%= seed.expedition_costs.round(2) %></div>
                    <p>€</p>
                  </div>
                </div>
                <div class="how-much">
                  <div class="last-text">Coût total max:</div>
                  <div class="cout">
                    <div class="totalcounter" id="total-counter-<%= pick.id %>"><%= (pick.price + seed.expedition_costs).round(2) %></div>
                    <p id="color-euro">€</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="action-links">
            <button type="button" class="btn-white" data-dismiss="modal" id="close-modal-<%= pick.id%>">Retour</button>
            <%= f.submit "Enregistrer", class: "btn-orange", id: "btn-pick" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



