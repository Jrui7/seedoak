

<div class="page-container">

  <div class="page-sections">

    <div class="head">
      <div class="title">
        <h1><%= @seed.title %></h1>
      </div>
      <div class="row head">
        <div class="col-xs-12 col-sm-7 nopadding-right nopadding-left">
          <div class="timer-and-pick">
            <div class="seed-infos-timer">
              <div id="timer" data-timer="<%= (@seed.expiration) %>">
                <%= render "seeds/timer"  %>
                <div id="clockdiv">
                  <div class="dynamic-timer">
                    <div class="smalltext">Days</div>
                    <span class="days"></span>
                  </div>
                  <div class="dynamic-timer">
                    <div class="smalltext">Hours</div>
                    <span class="hours"></span>
                  </div>
                  <div class="dynamic-timer">
                    <div class="smalltext">Minutes</div>
                    <span class="minutes"></span>
                  </div>
                  <div class="dynamic-timer">
                    <div class="smalltext">Seconds</div>
                    <span class="seconds"></span>
                  </div>
                </div>
              </div>
            </div>
              <div class="pick-section">
                <%= render "seeds/pick-section" %>
              </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= @seed.title %> </h4>
            </div>
            <div class="modal-body">
                  <div class="pick-modal">
                    <%= render "seeds/pick-form"%>
                  </div>
            </div>
            <div class="modal-footer">
              <button type="button" id="close-modal" class="btn btn-default text-center" data-dismiss="modal">Fermer</button>
            </div>
          </div>

        </div>
      </div>

    <div class="row body">

      <div class="col-xs-12 col-sm-7 nopadding-left nopadding-right">
        <div class="left-section">
          <div class="seed-media">
            <div class="seed-photos">
              <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <% turns = @seed.photos.size - 1 %>
                  <% slide_index = 1 %>
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <% if @seed.photos.size > 1 %>
                    <% turns.times do  %>
                      <li data-target="#myCarousel" data-slide-to="<%= slide_index%>"></li>
                      <% slide_index += 1 %>
                    <% end %>
                  <% end %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox" style=" width:100%;">
                <% photos = @seed.extract_seed_photos %>
                  <div class="item active">
                    <%= link_to "#photo#{@seed.id}first", data: {toggle: "modal"} do %>
                      <div class="hidden-xs">
                      <%= cl_image_tag photos.first.path, :height=>300, :crop=>"scale" %>
                      </div>
                      <div class="hidden-sm hidden-md hidden-lg">
                        <%= cl_image_tag photos.first.path, :height=>150, :crop=>"scale" %>
                      </div>
                    <% end %>
                  </div>
                  <!-- Modal -->
                  <div class="modal fade" id="photo<%=@seed.id%>first" role="dialog">
                    <div class="modal-dialog modal-lg">
                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title"><%= @seed.title %> </h4>
                        </div>
                        <div class="modal-body">
                              <div class="img-modal">
                                <%= cl_image_tag photos.first.path, :height=>400, :crop=>"scale" %>
                              </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" id="close-modal" class="btn btn-default text-center" data-dismiss="modal">Fermer</button>
                        </div>
                      </div>
                    </div>
                  </div>

                  <% if photos.size >= 2 %>
                    <% photos.delete_at(0) %>
                    <% photos.each_with_index do |photo, i| %>
                      <div class="item">
                        <%= link_to "#photo#{@seed.id}#{i}", data: {toggle: "modal"} do %>
                          <div class="hidden-xs">
                            <%= cl_image_tag photo.path, :height=>300, :crop=>"scale" %>
                          </div>
                          <div class="hidden-sm hidden-md hidden-lg">
                            <%= cl_image_tag photo.path, :height=>150, :crop=>"scale" %>
                          </div>
                        <% end %>
                      </div>
                      <!-- Modal -->
                      <div class="modal fade" id="photo<%=@seed.id%><%=i%>" role="dialog">
                        <div class="modal-dialog modal-lg">
                          <!-- Modal content-->
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title"><%= @seed.title %> </h4>
                            </div>
                            <div class="modal-body">
                                  <div class="img-modal">
                                    <%= cl_image_tag photos.first.path, :height=>400, :crop=>"scale" %>
                                  </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" id="close-modal" class="btn btn-default text-center" data-dismiss="modal">Fermer</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="seed-social">
              <div class="social-category">
                <div class="media-filter-icon glyphicon glyphicon-eye-open"></div>
                <p><%=@seed.view_counter%></p>
              </div>
              <div class="social-category">
                <div class="media-filter-icon glyphicon glyphicon-share-alt"></div>
                <p>Partager</p>
              </div>
              <div class="social-category">
                <div class="signal">
                  <%= render "signal_seeds/signal" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if (@seed.url != "") || (@seed.secondary_url != "") %>
        <div class="col-xs-12 col-sm-5 nopadding-left nopadding-right">
          <div class="right-section">
            <% if @seed.url != "" %>
              <div class="video-container">
                <iframe allowfullscreen class="video" src="<%= @seed.url.gsub('watch?v=', 'embed/') %>"
                      frameborder="0">
                </iframe>
              </div>
          <% end %>
          <% if @seed.secondary_url != "" %>
            <div class="video-container">
              <iframe allowfullscreen class="video" src="<%= @seed.secondary_url.gsub('watch?v=', 'embed/') %>"
                    frameborder="0">
              </iframe>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>




    </div>
  </div>
</div>








