

<div class="page-container">
  <div class="two-sections">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 col-md-8 nopadding">
          <div class="left-section">
            <h3 class="title-and-pick"><%= @seed.title %></h3>
            <div class="seed-media">
              <div class="seed-photos">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <% turns = @photos.size - 1 %>
                    <% slide_index = 1 %>
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <% if @photos.size > 1 %>
                      <% turns.times do  %>
                        <li data-target="#myCarousel" data-slide-to="<%= slide_index%>"></li>
                        <% slide_index += 1 %>
                      <% end %>
                    <% end %>
                  </ol>
                  <!-- Wrapper for slides -->
                  <div class="carousel-inner">
                    <div class="item active">
                      <%= cl_image_tag @photos.first.path %>
                    </div>
                    <% @photos.delete_at(0) %>
                    <% if @photos.size >= 1 %>
                      <% @photos.each do |photo| %>
                        <div class="item">
                          <%= cl_image_tag photo.path %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>

                  <!-- Left and right controls -->
                  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>

              <div class="seed-social">
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-eye-open"></div>
                  <p>Vues</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-heart-empty"></div>
                  <p>J'aime</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-share-alt"></div>
                  <p>Partager</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-exclamation-sign"></div>
                  <p>Signaler</p>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="col-xs-12 col-md-3 col-md-offset-1">
          <div class="right-section">
            <div class="pick-section">
              <p class="number-of-picks">
                <% if @seed.picks.any? %>
                  <%= pluralize @seed.picks.size, "pick" %>
                <% else %>
                   <%="Soyez le premier à picker" %>
                <% end %>
              </p>
              <% if @collections.include? @seed.id %>
                <p> <%= "Vous avez déjà pické"  %> </p>
              <% else %>
                <%= simple_form_for [@seed, @pick], url: seed_picks_path(@seed), :method => :post do |f| %>
                  <p><strong>Prix :</strong></p>
                  <%= f.input_field :price, as: :integer, class: 'input-sm form-control pick', id: 'start', placeholder: 'Renseignez ici' %>
                  <div class="counter-body">
                    <div class="counter"></div>
                  </div>
                  <%= f.submit "Enregistrer mon pick", class: "btn", id: "btn-pick" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>








