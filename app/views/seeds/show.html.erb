

<div class="page-container">
  <div class="two-sections">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 col-md-9 nopadding-left">
          <div class="left-section">

            <div class="title-and-pick">
              <h3><%= @seed.title %></h3>
              <div class="seed-infos-timer">
                <div id="timer" data-timer="<%= (@seed.expiration) %>">
                  <%= render "seeds/timer"  %>
                  <div id="clockdiv">
                    <div class="dynamic-timer">
                      <div class="smalltext">Days</div>
                      <span class="days"></span>
                    </div>
                    <div class="dynamic-timer">
                      <div class="smalltext">Hours</div>
                      <span class="hours"></span>
                    </div>
                    <div class="dynamic-timer">
                      <div class="smalltext">Minutes</div>
                      <span class="minutes"></span>
                    </div>
                    <div class="dynamic-timer">
                      <div class="smalltext">Seconds</div>
                      <span class="seconds"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            <div class="seed-media">
              <div class="seed-photos">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <% turns = @photos.size - 1 %>
                    <% slide_index = 1 %>
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <% if @photos.size > 1 %>
                      <% turns.times do  %>
                        <li data-target="#myCarousel" data-slide-to="<%= slide_index%>"></li>
                        <% slide_index += 1 %>
                      <% end %>
                    <% end %>
                  </ol>
                  <!-- Wrapper for slides -->
                  <div class="carousel-inner">
                    <div class="item active">
                      <%= cl_image_tag @photos.first.path, :height=>350, :crop=>"scale" %>
                    </div>
                    <% @photos.delete_at(0) %>
                    <% if @photos.size >= 1 %>
                      <% @photos.each do |photo| %>
                        <div class="item">
                          <%= cl_image_tag photo.path, :height=>350, :crop=>"scale" %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>

                  <!-- Left and right controls -->
                  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>

              <div class="seed-social">
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-eye-open"></div>
                  <p>Vues</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-heart-empty"></div>
                  <p>J'aime</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-share-alt"></div>
                  <p>Partager</p>
                </div>
                <div class="social-category">
                  <div class="filter-icon glyphicon glyphicon-exclamation-sign"></div>
                  <p>Signaler</p>
                </div>
              </div>

            </div>
          </div>
        </div>

        <div class="pick-box col-xs-8 col-md-3">
          <div class="right-section">
            <div class="pick-section">
              <% if @seed.picks.any? %>
                <h3 class="pick-title text-center">
                  Picker ce seed
                </h3>
              <% else %>
                <h3 class="pick-title text-center"><%="Soyez le premier à picker" %>
                </h3>
              <% end %>
              <% if @collections.include? @seed.id %>
                <h3 class="pick-title text-center"> <%= "Vous avez déjà pické"  %> </h3>
              <% else %>
                <%= simple_form_for [@seed, @pick], url: seed_picks_path(@seed), :method => :post do |f| %>
                  <div class="pick-form">
                    <div class="price">
                      <p><strong>Prix :</strong></p>
                      <%= f.input_field :price, as: :integer, class: 'input-sm form-control pick', id: 'start', placeholder: 'Renseignez ici' %>
                    </div>
                    <div class="counter-body">
                      <div class="counter"></div>
                    </div>
                    <div class="submit-pick">
                      <%= f.submit "Enregistrer mon pick", class: "btn", id: "btn-pick" %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

      </div>

      <% if @seed.url != "" %>
       <div class="video-container">
          <div class="row">
            <div class="col-xs-12 col-md-4 nopadding-left">
              <iframe class="video-show" src="<%= @seed.url.gsub('watch?v=', 'embed/') %>"
                frameborder="0">
              </iframe>
          </div>
          <% end %>
          <% if @seed.secondary_url != ""%>
            <div class="col-xs-12 col-md-4">
              <iframe class="video-show" src="<%= @seed.secondary_url.gsub('watch?v=', 'embed/') %>">
              </iframe>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>








