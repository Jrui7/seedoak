 <% if current_user %>
  <% unless my_pick.blank? %>
    <% if  my_pick.state == "pending" %>
      <%= link_to new_pick_payment_path(my_pick) do %>
        <div class="btn-blue">Mon pick : <%= my_pick.price %> €</div>
      <% end %>
    <% else %>
      <%= link_to pick_path(my_pick) do %>
        <div class="btn-blue">Mon pick : <%= my_pick.price %> €</div>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "#myModal", data: { toggle: "modal" } do%>
      <div class="btn-orange">
        <%= image_tag "white-icon.png", class: "pick-icon" %>
        <p>Pick it</p>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path do  %>
    <div class="btn-orange">
      <%= image_tag "white-icon.png", class: "pick-icon" %>
      <p>Pick it</p>
    </div>
  <% end %>
<% end %>

