
  <%= simple_form_for [@seed, @pick], url: seed_picks_path(@seed), remote: true,method: :post do |f| %>
    <div class="pick-form">
      <h3>Quel prix souhaitez-vous payer?</h3>
      <div class="price">
        <%= f.input_field :price, as: :integer, class: 'input-sm form-control pick', id: 'start-pick', placeholder: 'Votre prix'%>
        <div class="counter-body">
          <div class="counter">€</div>
        </div>
      </div>
      <% unless @seed.size_guide.blank? %>
        <%= f.input_field :size, class: 'input-sm form-control pick', id: 'size-pick', placeholder: "Votre taille"%>
      <% end %>
        <p>Dans l'hypothèse ou le produit doit vous être livré, vous serez débité de 3€90 au titre des coûts de livraison</p>
      <div class="livraison">
      </div>
        <div class="action-links">
          <button type="button" class="btn-dissmiss text-center" data-dismiss="modal">Retour</button>
          <%= f.submit "Enregistrer", class: "btn", id: "btn-pick" %>
        </div>
    </div>
  <% end %>

