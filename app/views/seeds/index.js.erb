$( document ).ready(function() {
  filter();
  unfilter();

});


function filter() {
  if  (<%= @filter %>) {
    $('.product').hide();
    $('.product.id-<%= @filter %>').toggleClass("filtered");
    $('.filtered').show();
    $('.sub-title.<%= @filter %>').toggleClass("inactive");
    $('.sub-title-xs.<%= @filter %>').toggleClass("inactive");
    $(".number-of-seeds.<%= @filter %>").toggleClass("hidden");
    $(".fa-toggle-on").removeClass("hidden");
    $(".filter-before").text("REINITIALISER")

  }
}

function unfilter(){
  $(".fa-toggle-on").click(function(event){
    event.preventDefault();
    location.reload();
  });

}




















