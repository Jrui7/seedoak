$( document ).ready(function() {

  filter();

});


function filter() {
  if  (<%= @filter %>) {
    $('.product').hide();
    $('.product.id-<%= @filter %>').toggleClass("filtered");
    $('.filtered').show();
    $('.sub-title.<%= @filter %>').toggleClass("inactive");
    $(".fa-toggle-on").removeClass("hidden");

  }
}

function unfilter(){
  $(".fa-toggle-on").click(function(event){
    event.preventDefault();
    $.ajax({
      type: "GET",
      url: "<%= seeds_path%>"
    });
  });

}




















