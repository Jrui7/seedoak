<div class="page-container">
  <%= render "seeds/newest-modals" %>

  <div class=" filter-xs">
    <!-- Trigger the modal with a button -->
    <div id="fixed-modal-trigger"><span class="glyphicon glyphicon-filter"></span></div>

    <button type="button" class="btn hidden" id="real-trigger" data-toggle="modal" data-target="#filter-xs"></button>

    <%= link_to new_seed_path, class:"cta-xs-button" do %>
      <div id="new-seed-link"><span class="glyphicon glyphicon-plus"></span></div>
    <% end %>

    <!-- Trigger the modal with a button -->
    <div id="fixed-modal-trigger-cat"><span class="glyphicon glyphicon-th-list"></span></div>

    <button type="button" class="btn hidden" id="real-trigger-cat" data-toggle="modal" data-target="#filter-xs-cat"></button>
  </div>
  <div class="seed-feed">


    <div class="categories hidden-xs">

      <div class="filter-title">
        <div class="filter-header">
        <% if @filter %>
           <p class="filter-before">DEFILTRER</p>
           <%= link_to newest_path do %>
            <i class="fa fa-toggle-on" aria-hidden="true"></i>
           <% end %>
          <% else %>
            <p class="filter-before">FILTRER</p>
          <% end %>
        </div>
        <div class="sub-categories">
          <%= render "shared/newest_categories", categories: @categories %>
        </div>
      </div>
    </div>

    <% if @seeds.blank? %>
      <div class="no-seed">
        <h1>Pas de campagne en cours.</h1>
        <%= link_to "Lancez la votre !", new_seed_path, class: "cta-new" %>
      </div>
    <% else %>
      <div class="seed-presentation">
        <div id="infinite-scrolling">
          <%= will_paginate @seeds %>
        </div>
        <%= render @seeds%>
      </div>
    <% end %>

  </div>
</div>
