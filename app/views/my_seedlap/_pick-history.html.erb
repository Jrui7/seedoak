<div class="pick-container">
  <%= link_to seed_path(pick.seed) do  %>
    <%= cl_image_tag("#{pick.seed.photos.first.path}", :width=>110, :height=>110, :crop=>"fill", class: "pick-image")%>
  <% end %>
  <div class="pick-body">
      <div class="title-and-delete">
        <%= link_to seed_path(pick.seed) do  %>
          <h3><%= pick.seed.title %></h3>
        <% end %>
        <% if pick.seed.ongoing? %>
          <%= link_to pick_path(pick.id), method: :delete, remote: true do %>
            <i class="fa fa-times-circle"></i>
          <% end %>
        <% end %>
      </div>
    <div class="price-pick">
      <div class="pick-state">
        <p class="price-display">Pické pour <%= pick.price %>€</p>
      <% if pick.seed.ongoing? %>
        <%= link_to "#myPick-#{pick.id}", data: {toggle: "modal"} do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
      <% else %>
        <% case pick.state when "finalized" %>
          <div>Finalized</div>
        <% when "pending" %>
          <div>Expired</div>
        <% when "campaign_failed" %>
          <div>Campaign_failed</div>
        <% when "pick_failed" %>
          <div>Pick_failed</div>
        <% when "campaign_closed" %>
          <div>Campaign closed</div>
        <% when "refunded" %>
          <div>Refunded</div>
        <% when "cancelled" %>
          <div>Cancelled</div>
        <% end %>
      <% end %>
      </div>

    </div>
  </div>
</div>


  <% if pick.state == "pending" && pick.seed.ongoing? %>
    <div class="campaign-status pick-pending">
      <p>Fin de la campagne: <%= pick.seed.expiration.strftime("%d/%m/%Y") %></p>
      <div class="payment-link">
        <%= link_to new_pick_payment_path(pick) do %>
          <div class="btn">Finaliser pick</div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="campaign-status pick-other">
    <p>Fin de la campagne: <%= pick.seed.expiration.strftime("%d/%m/%Y") %></p>
      <div class="payment-recap">
        <%= link_to pick_path(pick) do %>
          <div class="btn">Détails</div>
        <% end %>
      </div>
    </div>
  <% end %>


