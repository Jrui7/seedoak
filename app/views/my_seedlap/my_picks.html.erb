<% content_for(:title_tag) do %>
  Bienvenue sur Seedlap
<% end %>


<div class="page-container">
  <div class="pick-feed">
    <%if @picks.any? %>
      <div class="pick-presentation">
        <h2>Vos picks</h2>
        <% @picks.each do |pick| %>
          <div class="pick-iterate id-<%= pick.id%>">
          <%= render "my_seedlap/pick-history", pick: pick %>
          </div>

          <div class="pick-modal">
          <!-- Modal -->
            <div class="modal fade" id="myPick-<%= pick.id%>" role="dialog">
              <div class="modal-dialog modal">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= pick.seed.title %> </h4>
                  </div>
                  <div class="modal-body">
                    <h3>Modifier votre prix </h3>
                    <div class="pick-modal">
                      <%= render "picks/edit-form", seed: pick.seed, pick: pick %>
                    </div>
                  </div>
                  <div class="modal-footer hidden">
                    <button type="button" id="close-modal-<%= pick.id%>" class="btn btn-default text-center" data-dismiss="modal">Fermer</button>
                  </div>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      </div>
      <% else %>
        <div class="seed-presentation">
          <h2>Historique de vos picks</h2>
          <div class="desert">
            <div class="pick id-desert">
              <%= cl_image_tag("no-seed_nwo26u.jpg", :width=>150, :height=>150, :gravity=>"east", :crop=>"fill", class: "pick-image")%>
              <div class='pick-body'>
                <div class="div">
                  <h3>Un désert...</h3>
                  <p id="red-p">Le champ de vos picks est aride</p>
                </div>
                <div class="homepage-link">
                <%= link_to seeds_path do %>
                  <div class="btn btn-primary">Y remédier</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
