<% if user_signed_in? %>

  <div class="navbar-container">
    <div class="navbar">

      <!-- Logo -->
      <%= link_to seeds_path do %>
        <div class="logo-box">
          <div id="logo-text">Seedoak</div>
          <span class="glyphicon glyphicon-leaf", id="logo-icon"></span>
        </div>
      <% end %>



      <div class="menu-links">

        <div class="navbar-item">
          <%= link_to "SEEDS", seeds_path, class: "dropdown navigation dropdown-toggle", id: "navbar-menu" %>
        </div>

        <div class="navbar-item">
          <div class="dropdown">
            <%= link_to "FAQ", "#", class: "navigation dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-riht navbar-dropdown-menu">
              <li>
                <p>Comment ça marche</p>
              </li>
              <li>
                <p>Philosophie</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="navbar-item">
          <div class="dropdown">
            <%= link_to "US", "#", class: "navigation dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-riht navbar-dropdown-menu">
              <li>
                <p>L'équipe</p>
              </li>
              <li>
                <p>Nous contacter</p>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Navigation -->
      <div class="navbar-right">
        <!-- Avatar with dropdown menu -->
        <div class="my-picks">
          <%= link_to new_seed_path do %>
            <i class="fa fa-bullhorn" aria-hidden="true"></i>
          <% end %>
        </div>

        <div class="my-picks">
          <%= link_to my_picks_path do %>
            <i class="fa fa-hand-lizard-o" aria-hidden="true"></i>
          <% end %>
        </div>

        <div class="user-menu">
          <div class="dropdown">
            <% if current_user.photo? %>
              <%= cl_image_tag current_user.photo.path, class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% else %>
              <i class="fa fa-user-o avatar dropdown-toggle" aria-hidden="true" id="navbar-menu", data-toggle="dropdown"></i>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnecter") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>


    </div>
  </div>
<% end %>
