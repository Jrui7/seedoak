<% if user_signed_in? %>
  <div class="navbar">
    <!-- Logo -->
    <%= link_to seeds_path do %>
      <%= image_tag "seedoak-logo.png", id: "logo" %>
    <% end %>

      <div class="menu-links">

        <div class="navbar-item">
          <div class="dropdown">
            <%= link_to "Seeds", "#", class: "navigation dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-riht navbar-dropdown-menu">
              <li>
                <p>Les plus récents</p>
              </li>
              <li>
                <p>Les plus populaires</p>
              </li>
              <li>
                <p>Dernier jour</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="navbar-item">
          <div class="dropdown">
            <%= link_to "Le concept", "#", class: "navigation dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-riht navbar-dropdown-menu">
              <li>
                <p>Comment ça marche</p>
              </li>
              <li>
                <p>Philosophie</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="navbar-item">
          <div class="dropdown">
            <%= link_to "Qui sommes-nous?", "#", class: "navigation dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-riht navbar-dropdown-menu">
              <li>
                <p>L'équipe</p>
              </li>
              <li>
                <p>Nous contacter</p>
              </li>
            </ul>
          </div>
        </div>
      </div>





      <!-- Right Navigation -->


      <div class="navbar-right">
        <!-- Avatar with dropdown menu -->
        <div class="navbar-item">
          <div class="dropdown">
            <% if current_user.photo? %>
              <%= cl_image_tag current_user.photo.path, class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% else %>
              <%= image_tag "user.jpg", class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnecter") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="my-picks">
          <%= link_to my_picks_path do %>
            <%= image_tag "pick-5x.png", id: "my-picks" %>
          <% end %>
        </div>
    </div>


  </div>
<% end %>
