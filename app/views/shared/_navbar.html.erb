<% if user_signed_in? %>

  <div class="navbar-container">
    <div class="navbar">

      <!-- Logo -->
      <%= link_to seeds_path do %>
        <div class="logo-box">
          <div id="logo-text">Seedoak</div>
          <span class="glyphicon glyphicon-leaf", id="logo-icon"></span>
        </div>
      <% end %>



      <div class="menu-links hidden-xs">

        <div class="navbar-item">
          <%= link_to "SEEDS", seeds_path, id: "navbar-menu" %>
        </div>

        <div class="navbar-item">
          <%= link_to "FAQ", faq_path, id: "navbar-menu" %>
        </div>

        <div class="navbar-item">
          <%= link_to "TEAM", team_path, id: "navbar-menu" %>
        </div>
      </div>

      <!-- Right Navigation -->
      <div class="hidden-xs">
        <div class="navbar-right">
          <div class="my-picks">
            <%= link_to new_seed_path do %>
              <i class="fa fa-bullhorn" aria-hidden="true"></i>
            <% end %>
          </div>

          <div class="my-picks">
            <%= link_to my_picks_path do %>
              <i class="fa fa-hand-lizard-o" aria-hidden="true"></i>
            <% end %>
          </div>

          <div class="user-menu">
            <div class="dropdown">
              <% if current_user.photo? %>
                <%= cl_image_tag current_user.photo.path, :width=>40, :height=>40, :radius=>"max", :crop=>"scale", class: "dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
              <% else %>
                <i class="fa fa-user-o dropdown-toggle" aria-hidden="true" id="navbar-menu", data-toggle="dropdown"></i>
              <% end %>
              <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
                <li>
                  <%= link_to user_path(current_user) do %>
                    <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnecter") %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="hidden-sm hidden-md hidden-lg">
        <div class="user-menu">
          <div class="dropdown">
            <% if current_user.photo? %>
              <%= cl_image_tag current_user.photo.path, :width=>35, :height=>35, :radius=>"max", :crop=>"scale", class: "dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% else %>
              <i class="fa fa-user-o dropdown-toggle" aria-hidden="true" id="navbar-menu", data-toggle="dropdown"></i>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
                <% end %>
              </li>
              <li>
                <%= link_to new_seed_path do %>
                  <i class="fa fa-bullhorn" aria-hidden="true"></i> <%= t(".new_seed_xs", default: "Poster") %>
                <% end %>
              </li>
              <li>
                <%= link_to my_picks_path do %>
                  <i class="fa fa-hand-lizard-o"></i> <%= t(".my_picks_xs", default: "Mes picks") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnecter") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>


    </div>
  </div>
<% end %>
