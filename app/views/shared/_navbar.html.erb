<% if user_signed_in? %>
  <div class="navbar">
    <!-- Logo -->
    <%= link_to seeds_path do %>
      <%= image_tag "seedoak-logo.png", id: "logo" %>
    <% end %>

      <%= link_to "Seeds", "#", class: "navigation-link" %>
      <%= link_to "Le concept", "#", class: "navigation-link" %>
      <%= link_to "Qui sommes-nous?", "#", class: "navigation-link" %>

      <!-- Right Navigation -->


      <div class="navbar-right">
        <!-- Avatar with dropdown menu -->
        <div class="navbar-item">
          <div class="dropdown">
          <% if current_user.photo? %>
            <%= cl_image_tag current_user.photo.path, class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% else %>
            <%= image_tag "user.jpg", class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "DÃ©connecter") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
    </div>
  </div>
