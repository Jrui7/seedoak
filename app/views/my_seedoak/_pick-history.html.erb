<h2>Historique de vos picks</h2>
<% picks.each do |pick| %>
  <div class="product id-<%= pick.id%>">
    <%= link_to seed_path(pick.seed) do  %>
      <%= cl_image_tag("#{pick.seed.photos.first.path}", :width=>110, :height=>110, :crop=>"fill", class: "product-image")%>
    <% end %>
    <div class='product-body'> <%= link_to seed_path(pick.seed) do  %>
      <h3> <%= pick.seed.title %></h3>
      <p>Pické le <%= pick.created_at.strftime("%d/%m/%y")%></p>
      <div class="price-pick">
        <p class="price-display"><%= pick.price %>€</p>
        <% if pick.seed.ongoing? %>

        <%= link_to "#myPick-#{pick.id}", data: {toggle: "modal"} do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>

          <%= link_to pick_path(pick.id), method: :delete, remote: true do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        <% end %>
      </div>

    <% end %>
    </div>
  </div>
  <!-- Modal -->
    <div class="modal fade" id="myPick-<%= pick.id%>" role="dialog">
      <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%= pick.seed.title %> </h4>
          </div>
          <div class="modal-body">
            <div class="pick-modal">
              <%= render "picks/edit-form", seed: pick.seed, pick: pick %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="close-modal" class="btn btn-default text-center" data-dismiss="modal">Fermer</button>
          </div>
        </div>

      </div>
    </div>
<% end %>
