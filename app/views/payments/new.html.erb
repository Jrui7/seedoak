<h1>Confirmer participation au deal</h1>
<%= form_tag pick_payments_path(@pick) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@pick.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="<%= @pick.seed.title %>"
    data-email="<%= current_user.email %>"
    data-description="<%= @pick.seed.title %>"
    data-amount="<%= @pick.amount_cents %>"
    data-currency="<%= @pick.amount.currency %>"></script>

<% end %>
