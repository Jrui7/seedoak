$(document).ready(function(){
  loadLogIn();
  loadSignUp();
})

function loadLogIn() {
  $("#sign-in").click(function(){
    $("#action-xs").hide();
    $(".form-xs").removeClass("hidden");
    $(".form-login-xs").removeClass("hidden");
  })
}

function loadSignUp() {
  $("#sign-up").click(function(){
    $("#action-xs").hide();
    $(".form-xs").removeClass("hidden");
    $(".form-sign-up-xs").removeClass("hidden");
  })
}

function goback() {
  $(".glyphicon-remove").click(function(){
    $("#action-xs").hide();
    $(".form-xs").removeClass("hidden");
    $(".form-sign-up-xs").removeClass("hidden");
  })
}
